<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--        Hearts layout-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_heart1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/ic_heart" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_heart2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/ic_heart" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_heart3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/ic_heart" />

        </androidx.appcompat.widget.LinearLayoutCompat>
<!--        Bombs grid-->
        <!--        Bomb Row 1-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">




                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/main_IMG_bomb_1_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_centerInParent="true"
                    android:visibility="invisible"
                    android:src="@drawable/img_eggs">

                </androidx.appcompat.widget.AppCompatImageView>




                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/main_IMG_bomb_1_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_centerInParent="true"
                    android:visibility="invisible"
                    android:src="@drawable/img_eggs">

                </androidx.appcompat.widget.AppCompatImageView>




                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/main_IMG_bomb_1_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:layout_centerInParent="true"
                    android:src="@drawable/img_eggs">

                </androidx.appcompat.widget.AppCompatImageView>


        </androidx.appcompat.widget.LinearLayoutCompat>
        <!--        Bomb Row 2-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">




            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_bomb_2_1"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:src="@drawable/img_eggs">

            </androidx.appcompat.widget.AppCompatImageView>




            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_bomb_2_2"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:src="@drawable/img_eggs">

            </androidx.appcompat.widget.AppCompatImageView>




            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_bomb_2_3"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:src="@drawable/img_eggs">

            </androidx.appcompat.widget.AppCompatImageView>


        </androidx.appcompat.widget.LinearLayoutCompat>
        <!--        Bomb Row 3-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">




            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_bomb_3_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                android:src="@drawable/img_eggs">

            </androidx.appcompat.widget.AppCompatImageView>




            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_bomb_3_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                android:src="@drawable/img_eggs">

            </androidx.appcompat.widget.AppCompatImageView>




            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_bomb_3_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                android:src="@drawable/img_eggs">

            </androidx.appcompat.widget.AppCompatImageView>


        </androidx.appcompat.widget.LinearLayoutCompat>
        <!--        Bomb Row 4-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"

            android:layout_weight="1"
            android:orientation="horizontal">




            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_bomb_4_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                android:src="@drawable/img_eggs">

            </androidx.appcompat.widget.AppCompatImageView>




            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_bomb_4_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                android:src="@drawable/img_eggs">

            </androidx.appcompat.widget.AppCompatImageView>




            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_bomb_4_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                android:src="@drawable/img_eggs">

            </androidx.appcompat.widget.AppCompatImageView>


        </androidx.appcompat.widget.LinearLayoutCompat>
        <!--        Plane Row-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">




            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_plane1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                android:src="@drawable/img_bird">

            </androidx.appcompat.widget.AppCompatImageView>




            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_plane2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_centerInParent="true"

                android:src="@drawable/img_bird">

            </androidx.appcompat.widget.AppCompatImageView>




            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_plane3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                android:src="@drawable/img_bird">

            </androidx.appcompat.widget.AppCompatImageView>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Buttons layout-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"

            android:layout_weight="1"
            android:layout_marginTop="10dp"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >


                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/main_BTN_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:backgroundTint="#FF0000"
                    app:icon="@drawable/ic_left"
                    app:iconTint="@color/white" />

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/main_BTN_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:backgroundTint="#FF0000"
                    android:layout_alignParentBottom="true"
                    app:iconTint="@color/white"
                    app:icon="@drawable/ic_right" />
            </RelativeLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>



</RelativeLayout>